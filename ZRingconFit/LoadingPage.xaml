<UserControl x:Class="ZRingconFit.LoadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid Background="LightGray" Opacity="0.8"/>
        <Border CornerRadius="40" BorderThickness="1" HorizontalAlignment="Center" Height="300" Margin="0,0,0,0" VerticalAlignment="Center" Width="500">
            <Grid>
                <!--<Grid.Background>
                    <ImageBrush ImageSource="/Resources/Button1.png"/>
                </Grid.Background>-->
                <Image gif:ImageBehavior.AnimatedSource="/Resources/Loading.gif" Margin="0,50,0,150" />
                <Label x:Name="textLabel" HorizontalContentAlignment="Center" Margin="0,120,0,0" VerticalContentAlignment="Center">
                    <TextBlock x:Name="labelText" Foreground="Black" TextWrapping="Wrap" Text=""  FontSize="18"/>
                </Label>
                <!--<Image gif:ImageBehavior.AnimatedSource="/Resources/Loading.gif" Margin="0,100,0,100" />-->
            </Grid>
        </Border>
    </Grid>
</UserControl>
